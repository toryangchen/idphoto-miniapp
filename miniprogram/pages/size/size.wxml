<view class="page safe-bottom">
  <view class="header">
    <text class="title">选择照片尺寸</text>
    <text class="desc">请选择证件照使用场景</text>
  </view>

  <view class="grid">
    <view
      wx:for="{{sizeOptions}}"
      wx:key="key"
      class="size-card {{selectedSize === item.key ? 'active' : ''}}"
      data-key="{{item.key}}"
      bindtap="selectSize"
    >
      <text class="icon">{{item.icon}}</text>
      <text class="label">{{item.label}}</text>
    </view>
  </view>

  <button class="next" bindtap="nextStep">下一步</button>
</view>
