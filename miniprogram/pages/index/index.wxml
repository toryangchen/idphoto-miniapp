<view class="page safe-bottom">
  <view class="upload-card">
    <view class="upload-icon">
      <image class="icon-main" src="/assets/image.svg" mode="aspectFit"></image>
      <view class="icon-sub-wrap">
        <image class="icon-sub" src="/assets/camera.svg" mode="aspectFit"></image>
      </view>
    </view>
    <text class="upload-title">上传照片</text>
    <text class="upload-desc">支持相册选择或拍照</text>
    <text class="upload-format">JPG / PNG</text>

    <image wx:if="{{hasUpload}}" class="preview-thumb" src="{{imagePath}}" mode="aspectFill"></image>

    <button class="upload-btn" bindtap="choosePhoto">一键上传</button>
  </view>

  <text class="privacy">照片仅用于证件照制作，安全保障您的隐私。</text>
</view>
