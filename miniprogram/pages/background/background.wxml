<view class="page safe-bottom">
  <view class="header">
    <text class="title">选择背景颜色</text>
  </view>

  <view class="preview-wrap" style="background: {{previewColor}};">
    <image wx:if="{{imagePath}}" src="{{imagePath}}" class="preview" mode="aspectFit"></image>
    <text wx:else class="placeholder">预览图</text>
  </view>

  <view class="chips">
    <view
      wx:for="{{colors}}"
      wx:key="key"
      class="chip {{selectedBackground === item.key ? 'active' : ''}}"
      data-key="{{item.key}}"
      bindtap="selectColor"
    >
      <view class="dot" style="background: {{item.value}};"></view>
      <text class="label">{{item.label}}</text>
    </view>
  </view>

  <view wx:if="{{selectedBackground === 'custom'}}" class="custom-input">
    <text>自定义色值</text>
    <input value="{{customColor}}" bindinput="onCustomInput" placeholder="#00A0FF" />
  </view>

  <button class="next" bindtap="nextStep">下一步</button>
</view>
